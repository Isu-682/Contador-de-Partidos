<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contador_de_Partidos.MainPage"
             BackgroundColor="Transparent">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            <Label Text="Contador de Partido"
                   FontSize="36"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="White" />

            <!-- Entrada de nombres -->
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="Team1Entry" Placeholder="Equipo 1" HorizontalOptions="FillAndExpand"
                       BackgroundColor="White" TextColor="Black" />
                <Entry x:Name="Team2Entry" Placeholder="Equipo 2" HorizontalOptions="FillAndExpand"
                       BackgroundColor="White" TextColor="Black"/>
            </HorizontalStackLayout>

            <Button Text="Guardar nombres"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="OnSaveNames" />

            <Label x:Name="TeamsLabel"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontAttributes="Bold" />

            <!-- Marcador central -->
            <Frame BackgroundColor="White"
                   Padding="20"
                   CornerRadius="25"
                   HasShadow="True"
                   HorizontalOptions="Center">
                <Label x:Name="ScoreLabel"
                       Text="0 - 0"
                       FontSize="64"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black" />
            </Frame>

            <!-- Equipos -->
            <Grid ColumnDefinitions="*, Auto, *" Padding="10">

                <!-- Equipo 1 -->
                <Frame Grid.Column="0"
                       BackgroundColor="#2196F3"
                       Padding="15"
                       CornerRadius="20"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                        <Label x:Name="Team1Label"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="White" />

                        <HorizontalStackLayout Spacing="15">
                            <Button Text="+"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    FontSize="28"
                                    BackgroundColor="#1976D2"
                                    TextColor="White"
                                    CornerRadius="30"
                                    Clicked="OnAddTeam1"/>
                            <Button Text="-"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    FontSize="28"
                                    BackgroundColor="#E91E63"
                                    TextColor="White"
                                    CornerRadius="30"
                                    Clicked="OnSubTeam1"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Separador decorativo -->
                <BoxView Grid.Column="1" WidthRequest="2" BackgroundColor="#CCCCCC" />

                <!-- Equipo 2 -->
                <Frame Grid.Column="2"
                       BackgroundColor="#FF9800"
                       Padding="15"
                       CornerRadius="20"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                        <Label x:Name="Team2Label"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="White" />

                        <HorizontalStackLayout Spacing="15">
                            <Button Text="+"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    FontSize="28"
                                    BackgroundColor="#F57C00"
                                    TextColor="White"
                                    CornerRadius="30"
                                    Clicked="OnAddTeam2"/>
                            <Button Text="-"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    FontSize="28"
                                    BackgroundColor="#E91E63"
                                    TextColor="White"
                                    CornerRadius="30"
                                    Clicked="OnSubTeam2"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

            <!-- Botón reiniciar -->
            <Button Text="Reiniciar marcador"
                    BackgroundColor="#9E9E9E"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    Clicked="OnResetScore" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>