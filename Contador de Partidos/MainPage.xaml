<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contador_de_Partidos.MainPage">

    <ScrollView>
        <VerticalStackLayout
    Padding="20"
    Spacing="20"
    BackgroundColor="#000000">

            <Label Text="Contador de Partido"
           FontSize="32"
           HorizontalOptions="Center"
           FontAttributes="Bold"
           TextColor="White" />

            <!-- Entrada de nombres -->
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="Team1Entry" Placeholder="Equipo 1" HorizontalOptions="FillAndExpand" />
                <Entry x:Name="Team2Entry" Placeholder="Equipo 2" HorizontalOptions="FillAndExpand"/>
            </HorizontalStackLayout>

            <Button Text="Guardar nombres"
            BackgroundColor="#4CAF50"
            TextColor="White"
            CornerRadius="8"
            HeightRequest="45"
            Clicked="OnSaveNames" />

            <Label x:Name="TeamsLabel"
           FontSize="20"
           HorizontalOptions="Center"
           TextColor="White" />

            <!-- Marcador -->
            <Frame BackgroundColor="White"
           Padding="20"
           CornerRadius="15"
           HasShadow="True">
                <Label x:Name="ScoreLabel"
               Text="0 - 0"
               FontSize="52"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="#000"/>
            </Frame>

            <!-- Equipos en diseño horizontal -->
            <Grid ColumnDefinitions="*, Auto, *"
          Padding="10">

                <!-- Equipo 1 -->
                <Frame Grid.Column="0"
                       BackgroundColor="White"
                       Padding="5"
                       Margin="0,0,15,0"   
                       CornerRadius="15"
                       HasShadow="True">

                    <VerticalStackLayout
    HorizontalOptions="Center"
    VerticalOptions="Center">


                        <Label x:Name="Team1Label"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                        <HorizontalStackLayout Spacing="10"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">


                            <Button Text="+"
                            WidthRequest="60"
                            HeightRequest="60"
                            FontSize="28"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="30"
                            Clicked="OnAddTeam1"/>

                            <Button Text="-"
                            WidthRequest="60"
                            HeightRequest="60"
                            FontSize="28"
                            BackgroundColor="#E91E63"
                            TextColor="White"
                            CornerRadius="30"
                            Clicked="OnSubTeam1"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <!-- Separador decorativo -->
                <VerticalStackLayout Grid.Column="1"
                             WidthRequest="2"
                             BackgroundColor="#CCCCCC" />

                <!-- Equipo 2 -->
                <Frame Grid.Column="2"
                       BackgroundColor="White"
                       Padding="5"
                       Margin="15,0,0,0" 
                       CornerRadius="15"
                       HasShadow="True">


                    <VerticalStackLayout
    HorizontalOptions="Center"
    VerticalOptions="Center">


                        <Label x:Name="Team2Label"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

                        <HorizontalStackLayout Spacing="10"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">


                            <Button Text="+"
                    WidthRequest="60"
                    HeightRequest="60"
                    FontSize="28"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="30"
                    Clicked="OnAddTeam2"/>

            <Button Text="-"
                    WidthRequest="60"
                    HeightRequest="60"
                    FontSize="28"
                    BackgroundColor="#E91E63"
                    TextColor="White"
                    CornerRadius="30"
                    Clicked="OnSubTeam2"/>

        </HorizontalStackLayout>

    </VerticalStackLayout>
</Frame>

            </Grid>

        </VerticalStackLayout>


    </ScrollView>

</ContentPage>
